<%= header_and_page_title t('me.games.levels.title', game: @game.title) %>

<%= link_to t('games.levels.new'),
      new_my_game_level_path(game_id: @game.id),
      class: 'btn btn-default' %>

<table class="table table-striped">
  <thead>
    <th class="col-sm-1">
      <%= GameLevel.human_attribute_name(:sort) %>
    </th>
    <th class="col-sm-3">
      <%= GameLevel.human_attribute_name(:description) %>
    </th>
    <th class="col-sm-1">
      <%= GameLevel.human_attribute_name(:code) %>
    </th>
    <th class="col-sm-1">
    </th>
  </thead>
  <tbody>
    <% @game_levels.each do |game_level| %>
      <tr>
        <td>
          <%= game_level.sort %>
        </td>
        <td>
          <%= game_level.description %>
        </td>
        <td>
          <%= game_level.code %>
        </td>
        <td>
          <%= link_to t('common.edit'),
                edit_my_game_level_path(game_id: @game.id, id: game_level.id),
                class: 'btn btn-default' %>
          <%= link_to t('common.delete'),
                my_game_level_path(game_id: @game.id, id: game_level.id),
                class: 'btn btn-danger',
                data: { method: :delete, confirm: I18n.t('common.are_you_sure') } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
