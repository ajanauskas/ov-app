<%= header_and_page_title t('users.title') %>

<table class="table table-striped">
  <thead>
    <th class="col-sm-2">
      <%= User.human_attribute_name(:login) %>
    </th>
    <th class="col-sm-2">
      <%= User.human_attribute_name(:active_team) %>
    </th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user.login, user_path(user) %>
        </td>
        <td>
          <%= user.active_team %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
