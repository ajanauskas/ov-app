<%= header_and_page_title(@user.login) %>

<% if @user.active_team %>
  <h3>
    <%= t('.active_team') %>
  </h3>

  <%= render 'shared/teams_table',
              teams: [@user.active_team],
              user: @user,
              render: [:leave, :inactivate] %>
<% end %>

<% if @current_user == @user %>
  <h3>
    <%= t('.passive_teams') %>
  </h3>

  <%= render 'shared/teams_table',
              teams: @user.teams - [@user.active_team],
              user: @user,
              render: [:leave, :inactivate, :change] %>
<% end %>
