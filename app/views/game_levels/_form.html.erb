<% form_url = @game_level.new_record? ? game_levels_path(game_id: @game.id) : game_level_path(game_id: @game.id, id: @game_level.id) %>

<%= simple_form_for(@game_level, url: form_url) do |f| %>
  <%= f.input :sort, as: :integer %>
  <%= f.input :description, as: :ckeditor, input_html: { ckeditor: { toolbar: 'Full' } } %>
  <%= f.input :code %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
