<h1>
  <% title = t('games.levels.title', game: @game.title) %>
  <% content_for(:page_title, title) %>
  <%= title %>
</h1>

<%= link_to t('games.levels.new'),
      new_game_level_path(game_id: @game.id),
      class: 'btn btn-default' %>

<table class="table table-striped">
  <thead>
    <th class="col-sm-1">
      <%= GameLevel.human_attribute_name(:sort) %>
    </th>
    <th class="col-sm-3">
      <%= GameLevel.human_attribute_name(:description) %>
    </th>
    <th class="col-sm-1">
    </th>
  </thead>
  <tbody>
    <% @game_levels.each do |game_level| %>
      <tr>
        <td>
          <%= game_level.sort %>
        </td>
        <td>
          <%= game_level.description %>
        </td>
        <td>
          <%= link_to t('common.edit'),
                edit_game_level_path(game_id: @game.id, id: game_level.id),
                class: 'btn btn-default' %>
          <%= link_to t('common.delete'),
                game_level_path(game_id: @game.id, id: game_level.id),
                class: 'btn btn-danger',
                data: { method: :delete, confirm: I18n.t('common.are_you_sure') } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
